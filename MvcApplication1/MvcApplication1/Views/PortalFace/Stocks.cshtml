@{
    Layout = null;
}

<button class="Manage_Stocks_Button" onclick ="window.location.replace('PortalFace/ManageStocks');">Manage my Stocks</button>
<div class="summary-container">
    <h2 class="text-center">Quick Overview</h2>
    <div class="stock">@ViewBag.stock1</div>
    <div class="stock">@ViewBag.stock2</div>
    <div class="stock">@ViewBag.stock3</div>
</div>
<form id="symbolSearch" class="form-inline">
    <center><input id="ticker" name="ticker" type="text" placeholder="Stock Symbol" /><button class="main_page_Button" type="submit">Quick Search</button></center>
</form>
<div id="searchResults"></div>
<script>
    $("#symbolSearch").submit(function () {
        var ticker = $("#ticker").val();
        console.log(ticker);
        $.get("/PortalFace/StockInfo", { stockSymbol: ticker })
            .done(function (data) {
                $("#searchResults").html(data);
                $("#ticker").val("");
            });
        return false;
    });
</script>