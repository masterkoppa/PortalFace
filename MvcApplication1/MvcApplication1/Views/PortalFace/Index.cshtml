    <script type="text/javascript">
    //start of the chat functionality
    $(document).ready(function () {

        var name = "@ViewBag.name";

        var url = 'ws://' + window.location.hostname + window.location.pathname.replace('index.htm', 'ws.ashx') + '?name=' + name;

        ws = new WebSocket(url);

        ws.onopen = function () {

            $('#chat').prepend('Connected <br/>');

            $('#cmdSend').click(function () {

                ws.send($('#txtMessage').val());

                $('#txtMessage').val('');

            });

        };

        ws.onmessage = function (e) {

            $('#chat').prepend(e.data + '<br/>');

        };

        ws.onclose = function () {

            $('#chat').prepend('Closed <br/>');

        };

        ws.onerror = function (e) {

            $('#chat').prepend('Oops something went wront <br/>');

        };

    });

</script>
    
