@{
    Layout = null;
}

<form id="statusPost" action="">
    <input id="statusMessage" type="text" name="status" /><button type="submit" class="postStatus" id="postStatus">Submit</button>
</form>


<script>
    $("#statusPost").submit(function () {
        var statusMessage = $("#statusMessage").val();
        console.log(statusMessage);
        FB.api(
            '/me/feed',
            'post',
            { message: statusMessage },
            function (response) {
                //alert(JSON.stringify(response)); //DEBUG PURPOSES ONLY!
            }
            );
        $("#statusMessage").val('');
        return false;
    });
</script>